@using WorkManager.Business.ViewModels.Employee;
@model List<EmployeeViewModel>
@{
    ViewData["Title"] = "List employees";
}

<div class="mt-5 mb-2">
    <a asp-action="Create">Create new</a>
</div>

<table class="table table-striped">
    <tr>
        <th>
            Full name
        </th>
        <th>
            Email
        </th>
        <th>
            Actions
        </th>
    </tr>
    @foreach (var employee in Model)
    {

        <tr>
            <td>
                @employee.FullName
            </td>
            <td>
                @employee.Email
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@employee.Id">Update</a> |
                <a asp-action="Details" asp-route-id="@employee.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
            </td>
        </tr>
    }
</table>

@if (TempData["ValidationMessage"] is not null)
{
    <p class="text-danger">@TempData["ValidationMessage"]</p>
}